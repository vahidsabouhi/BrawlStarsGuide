<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wlcwallpaper"
    tools:context="com.example.vm2team.brawlstarsguide.brawlboxes">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="21dp"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="47dp"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/topbrawlboxes" />

            <ImageView
                android:id="@+id/firsttext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-111dp"
                app:srcCompat="@drawable/firsttextbrawlboxes" />

            <ImageView
                android:id="@+id/firstpic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-105dp"
                app:srcCompat="@drawable/firstpicbrawlboxes" />

            <ImageView
                android:id="@+id/secondtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-45dp"
                app:srcCompat="@drawable/secondtextbrawlboxes" />

            <ImageView
                android:id="@+id/secondpic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-45dp"
                android:layout_marginBottom="50dp"
                app:srcCompat="@drawable/secondpicbrawlboxes" />

            <ImageView
                android:id="@+id/thirdtext"
                android:layout_width="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-200dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/thirdtextbrawlboxes" />

            <ImageView
                android:id="@+id/thirdpic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-145dp"
                android:layout_marginBottom="40dp"
                app:srcCompat="@drawable/thirdpicbrawlboxes" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
