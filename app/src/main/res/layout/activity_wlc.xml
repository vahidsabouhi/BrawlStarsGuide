<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/wlcwallpaper"
    android:layout_height="match_parent"
    tools:context="com.example.vm2team.brawlstarsguide.wlc">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/brawlstarslogo"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/brawlstars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/brawlstars"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/the"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brawlstars"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/the" />

    <ImageView
        android:id="@+id/rahnama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/rahnama"
        android:layout_below="@+id/the"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rahnama"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/version" />

    <ImageView
        android:id="@+id/down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/down" />

</RelativeLayout>
